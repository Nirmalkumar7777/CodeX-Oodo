import React from 'react';
import { PenTool, FileText, AlertTriangle, CheckCircle2 } from 'lucide-react';

interface StatsCardProps {
  icon: React.ReactNode;
  label: string;
  value: string | number;
  iconBgColor: string;
  iconColor: string;
}

const StatsCard = ({ icon, label, value, iconBgColor, iconColor }: StatsCardProps) => {
  return (
    <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div className="flex items-center">
        <div 
          className={`w-12 h-12 ${iconBgColor} rounded-lg flex items-center justify-center`}
        >
          <div className={iconColor}>
            {icon}
          </div>
        </div>
        <div className="ml-4">
          <p className="text-sm font-medium text-gray-600">{label}</p>
          <p className={`text-2xl font-bold text-gray-900 ${label === 'Critical Requests' ? 'cursor-pointer hover:text-red-600 transition-colors' : ''}`}>
            {value}
          </p>
        </div>
      </div>
    </div>
  );
};

export default function StatsCards() {
  const stats = [
    {
      label: 'Total Equipment',
      value: '5',
      icon: <PenTool size={20} strokeWidth={2.5} />,
      iconBgColor: 'bg-teal-100',
      iconColor: 'text-teal-600',
    },
    {
      label: 'Active Requests',
      value: '5',
      icon: <FileText size={20} strokeWidth={2.5} />,
      iconBgColor: 'bg-orange-100',
      iconColor: 'text-orange-600',
    },
    {
      label: 'Critical Requests',
      value: '1',
      icon: <AlertTriangle size={20} strokeWidth={2.5} />,
      iconBgColor: 'bg-red-100',
      iconColor: 'text-red-600',
    },
    {
      label: 'Completed',
      value: '1',
      icon: <CheckCircle2 size={20} strokeWidth={2.5} />,
      iconBgColor: 'bg-green-100',
      iconColor: 'text-green-600',
    },
  ];

  return (
    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {stats.map((stat, index) => (
        <StatsCard
          key={index}
          label={stat.label}
          value={stat.value}
          icon={stat.icon}
          iconBgColor={stat.iconBgColor}
          iconColor={stat.iconColor}
        />
      ))}
    </div>
  );
}
